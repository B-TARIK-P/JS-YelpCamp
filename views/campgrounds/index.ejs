<% include ../partials/header %>

    <h1>This is campgrounds</h1>
    <p><a href="/campgrounds/new">add new campground</a></p>
    <% campgrounds.forEach(function(campground) { %>
    <div class="cards">
        <p><%= campground.name %></p>
        <img src="<%= campground.image %>" alt="nice view">
        <p class="description">
            <%- campground.description.substring(0,100) %>...
        </p>
        <p><%= campground.created.toDateString() %></p>
        <p>
            <a href="/campgrounds/<%= campground._id %>">Read More</a>
        </p>
    </div>
    <% }); %>

<% include ../partials/footer %>